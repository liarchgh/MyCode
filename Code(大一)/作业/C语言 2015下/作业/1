#include<stdio.h>
int main()
{
	int n, j, i, m, k, s, a;
	scanf("%d", &n);
	m = n;
	while (n / 10 != 0)
	{
		++i;
		n = n / 10;
	}
	a = n = m;
	for (j = 0; j <= i; ++j)
	{
		s = n % 10;
		k = 1;
		while (k <= i - j)
		{
			s *= 10;
			++k;
		}
		 m += s;
		n = n / 10;
	}
	printf("%d+%d=%d", a, m - a, m);
	return 0;
}